<PropertyList>

  <path>asi.ac</path>

  <animation>
    <object-name>Face</object-name>
    <object-name>PointerTip</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>PointerTip</object-name>

    <condition>
      <property>/sim/model/config/use-dds</property>
    </condition>

    <texture>asi.dds</texture>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

 <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/DR400-jsbSim/Models/Effects/glass_shader.dds</texture>
    <object-name>vitre</object-name>
    <condition>
      <property>/sim/model/config/use-dds</property>
    </condition>
  </animation>

 <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/DR400-jsbSim/Models/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
    <condition>
      <not><property>/sim/model/config/use-dds</property></not>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>vitre</object-name>
    <condition>
      <property>sim/model/config/glass-reflection-instruments</property>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>PointerTip</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   0.07 </red>
      <green> 0.04 </green>
      <blue>  0.04 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PointerTip</object-name>
    <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
    <interpolation>
     <entry><ind>   0 </ind><dep>   0 </dep></entry>
     <entry><ind>  30 </ind><dep>  10 </dep></entry>
     <entry><ind>  50 </ind><dep>  45 </dep></entry>
     <entry><ind>  70 </ind><dep>  90 </dep></entry>
     <entry><ind>  90 </ind><dep> 140 </dep></entry>
     <entry><ind> 110 </ind><dep> 190 </dep></entry>
     <entry><ind> 130 </ind><dep> 240 </dep></entry>
     <entry><ind> 135 </ind><dep> 290 </dep></entry>
     <entry><ind> 170 </ind><dep> 335 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
  </animation>

  <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Airspeed Indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
