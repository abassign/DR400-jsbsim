<PropertyList>

  <path>plaque_canopy.ac</path>

  <animation>
    <type>material</type>
    <object-name>plaque</object-name>

    <condition>
      <property>/sim/model/config/use-dds</property>
    </condition>

    <texture>plaque.dds</texture>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>plaque</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 0.12 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 0.80 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
</PropertyList>
